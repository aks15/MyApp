<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_text_to_speech"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abhinav.texttospeech.TextToSpeechActivity"
    android:background="@color/colorAccent">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:id="@+id/tvOutput"
        android:textSize="30sp" />

    <ImageButton
        android:onClick="onClick"
        android:layout_width="105dp"
        android:layout_height="105dp"
        app:srcCompat="@drawable/speak"
        android:id="@+id/btnSpeak"
        android:layout_below="@+id/btnSpeech"
        android:layout_alignLeft="@+id/btnSpeech"
        android:layout_alignStart="@+id/btnSpeech"
        android:layout_marginTop="73dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etText"
        android:hint="Text"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="onClick"
        android:text="Speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSpeech"
        android:background="@color/colorAccent"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/etText"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
